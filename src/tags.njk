---
layout: "base.njk"
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
permalink: /tags/{{ tag }}/
title: Tagged content
---
<div class="irevamp-hero">
  <div class="irevamp-section slide-up">
    <h3 style="margin-bottom: 0.6em;" class="">Here are all articles tagged “{{ tag }}.” :</h3>
<ul>
    {% set taglist = collections[tag] | reverse %}
    {% for post in taglist %}
        <li>
            <a href="{{ post.url }}" class="text--larger">{{ post.data.title }}</a>
            <p>
                <span>
                    <span>
                        {% for tag in post.data.tags %}
                            {% if tag != 'notes' %}
                                <span>
                                    {{tag}}
                                </span>
                            {% endif %}
                        {% endfor %}
                    </span>
                </span>
                <br>
                {{ post.data.description }}
            </p>
        </li>
    {% endfor %}
</ul>

  </div>
</div>

