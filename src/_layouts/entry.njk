---
layout: base.njk
---

<header class="irevamp-hero">
  <div class="irevamp-container slide-up">
    <h1 class="irevamp-ink--primary irevamp-mb-none bold600">{{ title }}</h1>
    {% if description %}
      <h5 class="irevamp-content-maxlength irevamp-ink--gray irevamp-mt-md irevamp-mx-auto irevamp-description">
        {{ description }}
      </h5>
    {% endif %}
  </div>
</header>
<main class="irevamp-container slide-up">
  <article class="irevamp-mx-auto">
    {{ content | safe }}
<hr class="menu-hori"/ >
    <p class="irevamp-lead" style="padding: 3vh 0;">Filed under:  
    {% for tag in tags %}
        <span class="bold600">
          <a href="/tags/{{ tag }}/" aria-label="Pages tagged with {{tag}}">{{tag}}</a>
        </span>
      {% endfor %}
    </p>
  </article>
</main>